# Guthwine Configuration

# Database URL
# For SQLite (development):
DATABASE_URL="file:./dev.db"
# For PostgreSQL (production):
# DATABASE_URL="postgresql://user:password@localhost:5432/guthwine?schema=public"

# Master key for vault encryption (REQUIRED - generate a secure key!)
GUTHWINE_MASTER_KEY="your-secure-master-key-change-in-production"

# JWT secret for signing mandates (REQUIRED - generate a secure key!)
GUTHWINE_JWT_SECRET="your-jwt-secret-change-in-production"

# OpenAI API Key for semantic firewall (optional, but recommended)
OPENAI_API_KEY="your-openai-api-key"

# HTTP Server Port
PORT=3000
