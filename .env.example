# =============================================================================
# GUTHWINE CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="postgresql://guthwine:guthwine_dev_password@localhost:5432/guthwine?schema=guthwine"
DATABASE_POOL_SIZE=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_CLUSTER_MODE=false

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""

# =============================================================================
# CRYPTOGRAPHY
# =============================================================================
# Master encryption key (32 bytes, base64 encoded) - GENERATE NEW FOR PRODUCTION
MASTER_ENCRYPTION_KEY="your-32-byte-base64-encoded-key-here=="
# JWT signing secret
JWT_SECRET="your-jwt-secret-here"
# JWT issuer
JWT_ISSUER="guthwine"

# =============================================================================
# LLM PROVIDERS
# =============================================================================
# OpenAI
OPENAI_API_KEY=""
OPENAI_ORG_ID=""
OPENAI_DEFAULT_MODEL="gpt-4o-mini"

# Anthropic
ANTHROPIC_API_KEY=""
ANTHROPIC_DEFAULT_MODEL="claude-3-haiku-20240307"

# Local LLM (Ollama)
OLLAMA_URL="http://localhost:11434"
OLLAMA_DEFAULT_MODEL="llama3.2"

# LLM Fallback Order (comma-separated)
LLM_FALLBACK_ORDER="openai,anthropic,ollama"

# =============================================================================
# PAYMENT RAILS
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_CONNECT_CLIENT_ID=""

# Coinbase
COINBASE_API_KEY=""
COINBASE_API_SECRET=""
COINBASE_WEBHOOK_SECRET=""

# Wise
WISE_API_KEY=""
WISE_PROFILE_ID=""
WISE_WEBHOOK_SECRET=""

# Plaid
PLAID_CLIENT_ID=""
PLAID_SECRET=""
PLAID_ENV="sandbox"

# =============================================================================
# SSO / AUTHENTICATION
# =============================================================================
# Session
SESSION_SECRET="your-session-secret-here"
SESSION_MAX_AGE=86400

# SAML
SAML_ENABLED=false
SAML_ENTRY_POINT=""
SAML_ISSUER=""
SAML_CERT=""

# OIDC
OIDC_ENABLED=false
OIDC_ISSUER=""
OIDC_CLIENT_ID=""
OIDC_CLIENT_SECRET=""

# SCIM
SCIM_ENABLED=false
SCIM_TOKEN=""

# =============================================================================
# OBSERVABILITY
# =============================================================================
# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Tracing (Jaeger/OTLP)
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4317"
OTEL_SERVICE_NAME="guthwine"

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9464

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SEMANTIC_EVAL_PER_MIN=100

# =============================================================================
# BILLING (Stripe Connect)
# =============================================================================
BILLING_ENABLED=false
BILLING_FREE_TIER_MANDATES=1000
BILLING_PRICE_PER_MANDATE_CENTS=1
BILLING_PRICE_PER_LLM_EVAL_CENTS=5

# =============================================================================
# API
# =============================================================================
API_PORT=3000
API_HOST="0.0.0.0"
API_CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# =============================================================================
# MCP SERVER
# =============================================================================
MCP_SERVER_NAME="guthwine"
MCP_SERVER_VERSION="2.0.0"

# =============================================================================
# DASHBOARD
# =============================================================================
DASHBOARD_URL="http://localhost:5173"
