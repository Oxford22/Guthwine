{
  "name": "guthwine",
  "version": "2.0.0",
  "private": true,
  "description": "Sovereign Governance Layer for AI Agents - Multi-tenant Enterprise Edition",
  "author": "Guthwine Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @guthwine/database db:generate",
    "db:push": "pnpm --filter @guthwine/database db:push",
    "db:migrate": "pnpm --filter @guthwine/database db:migrate",
    "db:seed": "pnpm --filter @guthwine/database db:seed",
    "db:studio": "pnpm --filter @guthwine/database db:studio",
    "demo": "pnpm --filter @guthwine/demo start",
    "demo:server": "node packages/demo/dist/server.js",
    "demo:mcp": "node packages/demo/dist/mcp-server.js",
    "start:api": "pnpm --filter @guthwine/api start",
    "start:mcp": "pnpm --filter @guthwine/mcp start",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
